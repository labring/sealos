ENV SAVE_ALL_LOG_DETAIL="false"
ENV LOG_DETAIL_REQUEST_BODY_MAX_SIZE="128"
ENV LOG_DETAIL_RESPONSE_BODY_MAX_SIZE="128"

CMD ["bash scripts/init.sh"]
