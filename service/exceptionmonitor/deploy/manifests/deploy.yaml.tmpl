apiVersion: apps/v1
kind: Deployment
metadata:
  labels:
    app: database-alert
  name: database-alert-deployment
  namespace: sealos
spec:
  progressDeadlineSeconds: 600
  replicas: 1
  revisionHistoryLimit: 10
  selector:
    matchLabels:
      app: database-alert
  strategy:
    type: Recreate
  template:
    metadata:
      labels:
        app: database-alert
    spec:
      containers:
        - image: ghcr.io/labring/sealos-exceptionmonitor-service:latest
          imagePullPolicy: Always
          name: database-alert
          ports:
            - containerPort: 8000
              protocol: TCP
          resources:
            requests:
              cpu: 100m
              memory: 500M
          securityContext:
            allowPrivilegeEscalation: false
            capabilities:
              drop:
                - ALL
          terminationMessagePath: /dev/termination-log
          terminationMessagePolicy: File
          env:
            - name: ClusterName
              value: ""
            - name: MonitorType
              value: ""
            - name: ClusterNS
              value: ""
            - name: FeishuWebhookURLUFA
              value: ""
            - name: FeishuWebhookURLCSD
              value: ""
            - name: FeishuWebhookURLOther
              value: ""
            - name: FeishuWebhookURLImportant
              value: ""
            - name: GlobalCockroachURI
              value: ""
            - name: LocalCockroachURI
              value: ""
            - name: SMSAccessKeyID
              value: ""
            - name: SMSAccessKeySecret
              value: ""
            - name: SMSEndpoint
              value: ""
            - name: SMS_SIGN_NAME
              value: ""
            - name: SMS_CODE
              value: ""
            - name: REGION_IO
              value: ""
            - name: REGION_BJA
              value: ""
            - name: REGION_HZH
              value: ""
            - name: REGION_GZG
              value: ""
            - name: REGION_TOP
              value: ""
            - name: BaseURL
              value: ""
            - name: DatabaseMonitor
              value: ""
            - name: DiskMonitor
              value: ""
            - name: CPUMemMonitor
              value: ""
            - name: BackupMonitor
              value: ""
            - name: DatabaseDiskMonitorThreshold
              value: ""
            - name: DatabaseExceptionMonitorThreshold
              value: ""
            - name: DatabaseCPUMonitorThreshold
              value: ""
            - name: DatabaseMemMonitorThreshold
              value: ""
          volumeMounts:
            - name: kubeconfig
              mountPath: /home/nonroot/kubeconfig
              readOnly: true
      volumes:
        - name: kubeconfig
          configMap:
            name: kubeconfig
      dnsPolicy: ClusterFirst
      restartPolicy: Always
      schedulerName: default-scheduler
      securityContext: {}
      terminationGracePeriodSeconds: 30
