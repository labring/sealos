# service auth's ingress
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/ssl-redirect: "false"
    nginx.ingress.kubernetes.io/backend-protocol: "HTTP"
    nginx.ingress.kubernetes.io/rewrite-target: /$2
  name: sealos-auth
  namespace: sealos
spec:
  rules:
    - host: {{ .cloudDomain }}
      http:
        paths:
          - pathType: Prefix
            path: /service/auth(/|$)(.*)
            backend:
              service:
                name: service-auth
                port:
                  number: 8080
  tls:
    - hosts:
        - '{{ .cloudDomain }}'
      secretName: {{ .wildcardCertSecretName }}
---
# casdoor's ingress
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
    nginx.ingress.kubernetes.io/rewrite-target: /$2
    nginx.ingress.kubernetes.io/backend-protocol: "HTTPS"
  name: sealos-login
  namespace: sealos
spec:
  rules:
    - host: {{ .ssoEndpoint }}
      http:
        paths:
          - pathType: Prefix
            path: /()(.*)
            backend:
              service:
                name: casdoor
                port:
                  number: 8000
          - pathType: Prefix
            path: /cdn(/|$)(.*)
            backend:
              service:
                name: casdoor-local-cdn
                port:
                  number: 80
  tls:
    - hosts:
        - '{{ .ssoEndpoint }}'
      secretName: {{ .wildcardCertSecretName }}