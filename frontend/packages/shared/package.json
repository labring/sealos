    "js-yaml": "^4.1.0",
    "lucide-react": ">=0.460.0",
    "react": "^18.0 || ^19.0 || ^19.0.0-rc",
    "react-dom": "^18.0 || ^19.0 || ^19.0.0-rc",
    "sealos-desktop-sdk": "workspace:*",
    "zod": "^3 || ^4",
    "zustand": "^4 || ^5"
  },
  "peerDependenciesMeta": {
    "@chakra-ui/icons": {
      "optional": true,
