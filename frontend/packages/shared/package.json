{
  "name": "@sealos/shared",
  "version": "1.0.0",
  "description": "Shared utilities, types, and components for Sealos frontend applications",
  "license": "ISC",
  "private": true,
  "main": "./src-client/index.ts",
  "types": "./src-client/index.ts",
  "exports": {
    ".": "./src-client/index.ts",
    "./chakra": "./src-client/components/chakra/index.ts",
    "./shadcn": "./src-client/components/shadcn/index.ts",
    "./components/shadcn/styles.css": "./src-client/components/shadcn/styles.css",
