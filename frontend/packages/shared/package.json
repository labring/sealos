      ],
      "server": [
        "src-server/index.ts"
      ]
    }
  },
  "scripts": {
    "build": "exit 0",
    "lint": "eslint src-client --ext .ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@chakra-ui/icons": "^2",
    "@chakra-ui/react": "^2",
    "@kubernetes/client-node": "^0.18.1",
