    },
    "@chakra-ui/react": {
      "optional": true,
      "description": "Optional for frontend code (Chakra UI components)"
    },
    "@kubernetes/client-node": {
      "optional": false,
      "description": "Required for backend code (./server export)"
    },
    "dayjs": {
      "optional": false,
      "description": "Required for backend code (./server export)"
    },
    "js-yaml": {
      "optional": false,
      "description": "Required for backend code (./server export)"
    },
    "immer": {
      "optional": false,
      "description": "Required for frontend code (state management)"
    },
    "lucide-react": {
      "optional": false,
      "description": "Required for frontend code (icons)"
    },
    "react": {
      "optional": false,
      "description": "Required for frontend code"
    },
    "react-dom": {
      "optional": false,
      "description": "Required for frontend code"
    },
    "sealos-desktop-sdk": {
      "optional": false,
      "description": "Required for frontend code"
    },
    "zustand": {
      "optional": false,
      "description": "Required for frontend code (state management)"
    },
    "zod": {
      "optional": false,
      "description": "Required for frontend code (schema validation)"
    }
  },
  "devDependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.1",
    "@kubernetes/client-node": "^0.18.1",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.7.1",
    "@types/react": "18.3.27",
    "@types/react-dom": "18.3.7",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "dayjs": "^1.11.10",
    "eslint": "^8.57.0",
    "eslint-plugin-import": "^2.29.1",
    "immer": "^10.2.0",
    "js-yaml": "^4.1.0",
    "lucide-react": "^0.476.0",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sealos-desktop-sdk": "workspace:*",
    "typescript": "^5.9.3",
