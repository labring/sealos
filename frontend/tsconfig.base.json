{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
		"isolatedModules": true,
    "allowJs": true,
    "strict": true,
		"skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "removeComments": true,
  },

  "exclude": [
    "**/node_modules",
  ]
}