ENV cloudDomain="127.0.0.1.nip.io"
ENV cloudPort=""

ENV certSecretName="wildcard-cert"
ENV ingressSecret="wildcard-cert"
ENv monitorUrl="http://database-monitor.sealos.svc.cluster.local:9090"

CMD ["kubectl apply -f manifests"]
